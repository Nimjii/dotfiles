{
  "title": "Exchange Command+Space (Spotlight) and Control+Space (IntelliSense code completion)",
  "rules": [
    {
      "description": "Change Command+Space to Control+Space",
      "manipulators": [
        {
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "control"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Change Control+Space to Command+Space",
      "manipulators": [
        {
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "command"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
